<style>
    .detailProduct div{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .detailProduct div img{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        left: 30px;
        position: relative;
    }
    .detailProduct button{
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #523B2B;
        color: white;
        margin: 10px;
    }
    .detailProduct{
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 80vh;
    }
    .detailProduct p{
        margin: 10px;
    }
    .detailProduct img{
        width: 350px;
        height: 350px;
    }

</style>
